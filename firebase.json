{
  "hosting": {
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self' fonts.gstatic.com fonts.googleapis.com/ maxcdn.bootstrapcdn.com *.googletagmanager.com *.google-analytics.com unsafe-eval"
          }
        ]
      }
    ],
    "public": "dist/demo",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}